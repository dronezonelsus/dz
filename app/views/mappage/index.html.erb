	.pos{ border-style: ridge; }
	.sidebarOne{ 
		height: 700px;
		border-color: #1C2331;
		background-color:#3E4551;}
</style>

<div class="body_padding">

<p id="notice"><%= notice %></p>
<div class="jumb" style="width: 100%; height: 400px">
	<div class="jumb_transbox">
		<h1>KNOW</br>BEFORE</br>YOU FLY</h1>
		<button href="" type="button" class="btn btn-danger" style="display: block; margin: 0 50; text-align: center; font-weight: bold;">Current FAA Regulations</button>
	</div>
</div>
<div class="container body_padding" style="padding:10px; padding-bottom:50px;   /* Set relative to Height of the footer */" >
	<marquee behavior="scroll" direction="left" scrollamount="5"><h3 id="marqueeOne" >Live Tracking in Progress...</h3></marquee>
	<!-- <h1>Live Tracking</h1> -->
	<div class="row">
  		<div id="map" class="pos col-lg-8 col-md-7 col-sm-12" style='height: 700px;'> 
  			<script type="text/javascript">
    			var handler = Gmaps.build('Google');
    			handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    			markers = handler.addMarkers(<%=raw @hash.to_json %>);
    			handler.bounds.extendWith(markers);
    			handler.fitMapToBounds();  
  				});
  			</script>
		</div>
		<div class="col-lg-1 col-md-2"></div>
		<div class="col-lg-3 col-md-3 col-sm-12 sidebarOne panel-primary">
			<h3>Drone Details</h3>
		</div>
	</div>
</div>
