<script src="//maps.google.com/maps/api/js?key=AIzaSyA2b6Qe48bvmxyYCCr1sA1QqrXCG8dJuYk"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<p id="notice"><%= notice %></p>
<div class="container body_padding" id="listing_drones_div" style="padding:10px; padding-bottom:50px;   /* Set relative to Height of the footer */ margin-top: 5%;">
  <h2 id="listing_drones">List of Drones</h2>

  <table style="width:100%" class="table">
    <thead>
      <tr>
        <th>Drone Registration Number</th>
        <th>Drone Name</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Departure</th>
        <th>Arrival</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @drones.each do |drone| %>
          <tr class="bg-danger">
            <td class="bg-success"><%= drone.drone_number %></td>
            <td><%= drone.drone_name %></td>
            <td id="latitude"><%= drone.latitude %></td>
            <td id="longitude"><%= drone.longitude %></td>
            <td><%= drone.departure %></td>
            <td><%= drone.arrival %></td>
            <td><%= link_to 'Show', drone %></td>
            <td><%= link_to 'Edit', edit_drone_path(drone) %></td>
            <td><%= link_to 'Destroy', drone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <div style="background: rgba(214,50,50,0.2); font-size: 12px; padding: 5px; width: 200px; color: rgba(255,255,255,0.9);" class="panel">
    <%= link_to 'Add Drone', new_drone_path %>
    &nbsp; &nbsp;
    <%= link_to 'Live Tracking', mappage_index_path %>
  </div>
</div>
